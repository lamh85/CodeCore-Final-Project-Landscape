<div ng-app="locationLevelApp">
<div ng-controller="locationLevelController">

    <h1>Location Levels</h1>

    <div ng-repeat="(property, value) in levelsSegmented" class="thread">
        <div class="clearfix">
            <strong>{{property}}:</strong>
        </div>
        <div
            class="level" data-thread={{property}} data-index={{$index}}
            ng-repeat="element in value track by $index" drag-dir dir-drag-att="handleDrag()" dir-dragover-att="handleDragover()" dir-drop-att="handleDrop()"
        >
        <!-- "value" is a JS array -->
            <span class="tag">
                <div class="form-group">
                    <div class="input-group inline-block">
                        <input class="form-control inline-block" ng-model="element.name">
                        <span class="input-group-addon inline-block">
                            <i class="fa fa-pencil"></i>
                        </span>
                    </div>
                </div>
            </span>
            <span ng-if="$index + 1 < value.length">
                <i class="fa fa-chevron-right"></i>
            </span>
        </div>
        <span class="btn btn-primary inline-block" ng-click="newLevel(property)">Add a new level</span>
        <div class="clearfix margin-20"></div>
    </div>

</div>
</div>