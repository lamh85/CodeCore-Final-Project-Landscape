<h1>Settings</h1>

<h2>Change my name</h2>

<%= simple_form_for current_user, :url => user_path(current_user), html: { class: 'form-group' } do |f| %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.submit "Save" %>

<% end %>

