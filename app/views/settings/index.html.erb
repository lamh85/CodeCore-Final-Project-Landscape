<h2>Set my home organization</h2>

<%= simple_form_for current_user, html: { class: 'form-group' }, data: {confirm: "Are you sure that you want to change your organization? This will impact some reports."} do |f| %>

  <%= f.association :organization, collection: Organization.order(:name), label: false, include_blank: false %>
  <%= f.submit "Save" %>

<% end %>

