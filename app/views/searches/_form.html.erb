<%= simple_form_for @search, html: { class: 'form-group' }, remote: true do |f| %>

  <%= f.simple_fields_for :filters do |filter| %>
    <%= render "filter_fields", f: filter %>
  <% end %>
  <div class="links">
    <%= link_to_add_association "<span class='glyphicon glyphicon-filter'></span> Add another filter".html_safe, f, :filters, {id: "add-filter", class: "btn btn-primary"} %>
  </div>

  <div class="wrapper-search">
    <%= button_to :controller => "searches", :action => "create" do %>
      <span class="glyphicon glyphicon-search"></span> Search
    <% end %>
  </div>

<% end %>