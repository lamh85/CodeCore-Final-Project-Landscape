<% property_array = [
  ["Product","product"],
  ["Product Category","category"],  
  ["Province","province"],
  ["Country","country"],
  ["Description","description"]
  ] %>

<div class="nested-fields">
  <div class="col-md-4">
    <%= f.input :property, collection: property_array, label: "Search by", include_blank: false %>
  </div>
  
  <div class="col-md-4">
    <%= f.input :search_term, label: "Contains Text:" %>
  </div>
  <div class="col-md-4 del-filter-bound">
    <%= link_to_remove_association "Remove this filter", f, {class: "btn btn-danger"} %>
  </div>
  <div class="clear"></div>
</div>